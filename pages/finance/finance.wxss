.flex {
  display: flex;
  justify-content: center;
  align-items: center;
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  border-bottom: 1px solid #eee;
  margin: 0 20rpx;
}

.picker-text {
  color: #ff5700;
  font-size: 36rpx;
}

.picker-image {
  width: 40rpx;
  height: 40rpx;
}